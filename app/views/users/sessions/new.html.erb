<div class="card mx-auto my-4" style="width: 30rem;">
  <div class="card-body">
    <h3 class="card-title text-center">Log in</h3>
    <p class="card-text">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-4">
          <%= f.label :email, class: "form-label"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
        <div class="field mb-4">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field form-check mb-4">
            <%= f.check_box :remember_me, class:"form-check-input" %>
            <%= f.label :remember_me, class:"form-check-label" %>
          </div>
        <% end %>
        <div class="actions d-grid gap-2 col-12 mx-auto mb-4">
          <%= f.submit "Log in", class:"btn btn-primary d-md-block" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= render "users/shared/links" %>
      </div>
    </p>
  </div>
</div>
